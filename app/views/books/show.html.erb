<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        読書感想詳細
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @book, :image, fallback: "no-image.png", class: "fit_image" %>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @book.title %></p>
              </div>
            </div>
            <div class="content">
              <table class="table is-narrow">
                <tr>
                  <th>読書感想</th>
                </tr>
                <tr>
                  <td><%= simple_format @book.body %></td>
                </tr>
              </table>
              <% if @book.user.id == current_user.id %>
                <%= link_to "編集画面へ", edit_book_path(@book), class: "button is-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="column is-4">
        <article class="panel is-primary">
          <p class="panel-heading">
            By <%= @book.user.username %>
          </p>
          <div class="panel-block">
            <p class="control">
              <%= @book.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@book.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @book.user.username %> さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>